<!doctype html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
			  rel="stylesheet" 
			  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
			  crossorigin="anonymous">

		<title> <%= gallery_name %> </title>
	</head>

	<%- include ("./templates/header") %>
	<body>
		<main>
			<form id='gallery' action='/view_img' method='post'>
				<% for (var i = 0; i < docs.length; i++) { %>
				<input class="image_button" 
					   type="image" 
					   src='<%= docs[i].url %>'
					   name='img'
					   value='<%= docs[i].work_title %>'>
					   <% } %>
			</form>

			<div id='sidebar'>
				<% if (selected) { %>
				<div class='information'>
					<img src=<%= selected.url %>>
					<h3> <%= selected.work_title %> </h3>
					<p> <%= selected.author %></p>
					<p> <%= selected.date %></p>
					<p> <%= selected.description %></p>
				</div>
				<div class='comment_editor'>
					<h5>Deja un comentario</h5>
					<form class='form-inline'>
						<div class='form-group mb-2'>
							<input class="form-control"> </input>
						</div>
						<button type='button' class="btn btn-primary mb-2"> 
							enviar 
						</button>
					</form>
				</div>
				<div class='comment_section'>
					<h5>Comentarios</h5>
					<ul class="list-group list-group-flush">
						<li class="list-group-item comment">
							<label>
								<b>Usuario1:</b> comentario
							</label>
						</li>
						<li class="list-group-item comment">
							<label>
								<b>Yo:</b> me gust√≥
							</label>
							<div class='btn-group btn-group-sm' role='group'>
								<button type='button' class='btn btn-outline-secondary'>
									edit 
								</button>
								<button type='button' class='btn btn-outline-danger'>
									delete
								</button>
							</div>
						</li>
					</ul>
				</div>
				<% } else { %>
				<div class='information'>
					<h3> Selecciona una obra </h3>
				</div>
				<% } %>
			</div>
		</main>
	</body>
	<style>

a {
	margin-left: 25px;
}

main {
	display: flex;
	flex-flow: row wrap;
	justify-content: space-around;
}

#gallery {
	display: flex;
	flex-flow: row wrap;
	justify-content: space-around;
	width: 50%;
}

.image_button {
	display: flex;
	width: auto;
	height: 200px;
	margin: 5px;
}

#sidebar {
	display: flex;
	flex-flow: column wrap;
	background-color: #dddddd;
	border-radius: 25px;
	padding: 15px;
	width: 45%;
}

img {
	display: flex;
	width: 100%;
	height: auto;
	margin: 5px;
	border-style: solid;
}

.information {
	display: flex;
	flex-flow: column wrap;
	align-items: center;
	margin: 5px;
}

.comment_editor {
	display: flex;
	flex-flow: column nowrap;
	justify-content: space-between;
	margin: 5px
}

.comment_section {
	display: flex;
	flex-flow: column nowrap;
	justify-content: space-between;
	margin: 5px
}

.comment {
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	align-items: center;
}
	</style>
</html>
